<p id="notice"><%= notice %></p>

<h1>Tarefas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Inicio</th>
      <th>Previsao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarefas.each do |tarefa| %>
      <tr>
        <td><%= tarefa.nome %></td>
        <td><%= tarefa.descricao %></td>
        <td><%= tarefa.inicio %></td>
        <td><%= tarefa.previsao %></td>
        <td><%= link_to 'show', tarefa %></td>
        <td><%= link_to 'edit', edit_tarefa_path(tarefa) %></td>
       <td><%= link_to 'Destroy', tarefa, method: :delete, data: { confirm: 'Are you sure?' } %>
       </td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Tarefa' , new_tarefa_path %>


