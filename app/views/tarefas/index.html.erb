<h1>Tarefas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Inicio</th>
      <th>Previsao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarefas.each do |tarefa| %>
      <tr>
        <td><%= tarefa.nome %></td>
        <td><%= tarefa.descricao %></td>
        <td><%= tarefa.inicio %></td>
        <td><%= tarefa.previsao %></td>
        <td><%= link_to 'mostrar', tarefa %></td>
        <td><%= link_to 'editar', edit_tarefa_path(tarefa) %></td>
        <td><%= link_to 'concuida', tarefa, method: :delete, data: { confirm: 'vocÃª concluiu esta tarefa?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

