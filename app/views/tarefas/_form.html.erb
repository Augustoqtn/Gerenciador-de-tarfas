<%= form_with(model: tarefa) do |form| %>
  <% if tarefa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tarefa.errors.count, "erro(s)") %> encotrado(s):</h2>

      <ul>
        <% tarefa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>
  
  <div class="field">
    <%= form.label :descricao %>
    <%= form.text_field :descricao %>
  </div>

  <div class="field">
    <%= form.label :inicio %>
    <%= form.date_select :inicio %>
  </div>

  <div class="field">
    <%= form.label :previsao %>
    <%= form.date_select :previsao %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
